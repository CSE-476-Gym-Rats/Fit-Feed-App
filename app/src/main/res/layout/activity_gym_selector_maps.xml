<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GymSelectorMapsActivity">

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveHomeGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/save_home_gym_button"
        android:src="@drawable/baseline_save_24"
        android:tint="@color/dark_navy" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancelHomeGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:layout_marginEnd="80dp"
        android:contentDescription="@string/cancel_home_gym_button"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:tint="@color/dark_navy" />
</FrameLayout>